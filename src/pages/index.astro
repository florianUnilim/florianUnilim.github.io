---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex flex-col min-h-screen bg-[#302E2B] text-white">
    <!-- Barre verticale gauche -->
    <div class="flex flex-1">
      <Header />
      <!-- Contenu principal -->
      <main class="flex-1 p-4 ml-[20%]">

        <!-- haut-->
        <div>
        <div class="flex flex-row items-center">
          <img src="/photodeprofil2.jpg" class=" h-10" />
          <p class="pl-3">Florian DENIS - étudiant en BUT MMI</p>
        </div>
      </div>

      <div class="flex flex-col lg:flex-row">
      <!-- coté gauche-->
      <div class=" bg-blue-700 h-screen w-full lg:w-1/2">

      </div>
       <!-- coté droit-->
        <div class=" bg-red-700 h-screen w-full lg:w-1/2">

        </div>
      </div>
      </main>
    </div>
    <!-- Footer -->
    <Footer />
  </body>
</html>
